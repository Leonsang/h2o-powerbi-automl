{
    "version": 1,
    "log_dir": "logs",
    "max_bytes": 10485760,
    "backup_count": 5,
    "default_level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s",
    "date_format": "%Y-%m-%d %H:%M:%S",
    "handlers": {
        "file": {
            "enabled": true,
            "level": "DEBUG"
        },
        "console": {
            "enabled": true,
            "level": "INFO"
        }
    },
    "loggers": {
        "script_pbi": {
            "level": "INFO",
            "propagate": true
        },
        "analisis_modelo": {
            "level": "DEBUG",
            "propagate": true
        },
        "h2o_server": {
            "level": "INFO",
            "propagate": true
        }
    },
    "alerts": {
        "enabled": true,
        "critical_patterns": [
            "Error iniciando H2O",
            "Error durante el proceso de predicción",
            "Error durante el análisis de resultados"
        ],
        "notification_methods": ["console", "file"]
    }
} 